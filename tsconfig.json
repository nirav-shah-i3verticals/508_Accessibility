{
  "compilerOptions": {
    "declaration": true,
    "target": "es2017",
    "module": "nodenext",
    "outDir": "./lib",
    "rootDir": "./",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test-*.ts",
    "test-*.js",
    "lib/**/*",
    "node_modules"
  ]
}