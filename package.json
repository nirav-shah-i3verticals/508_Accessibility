{
  "name": "508-accessibility-mcp-server",
  "version": "1.0.0",
  "description": "Section 508 Accessibility Compliance Checking MCP Server for web accessibility testing",
  "main": "./lib/src/index.js",
  "bin": {
    "508-accessibility-mcp": "./lib/src/index.js"
  },
  "files": [
    "lib/src/**/*",
    "README.md",
    "LICENSE",
    "MCP_CONFIGURATION.md"
  ],
  "keywords": [
    "mcp",
    "accessibility",
    "section-508",
    "wcag",
    "compliance",
    "web-testing"
  ],
  "scripts": {
    "dev:sse": "nodemon --exec node --inspect=9239 --signal SIGINT -r ts-node/register ./src/index.ts sse",
    "dev:stdio": "nodemon --quiet --exec node --signal SIGINT -r ts-node/register ./src/index.ts stdio",
    "dev:inspector": "mcp-inspector",
    "build": "tsc --build",
    "prepublishOnly": "npm run build",
    "start:sse": "node ./lib/src/index.js sse",
    "start:stdio": "node ./lib/src/index.js stdio"
  },
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "express": "^4.21.2",
    "zod": "^3.24.2",
    "puppeteer": "^22.0.0",
    "axe-core": "^4.8.0",
    "csv-writer": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "color": "^4.2.3"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "0.6.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.10",
    "@types/color": "^3.0.6",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
